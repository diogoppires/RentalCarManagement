@model TP_PWEB.Models.Booking

@{
    ViewBag.Title = "Details";
}

<h2>Booking Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.idBooking)</dt>
        <dd>@Html.DisplayFor(model => model.idBooking)</dd>
        <dt>@Html.DisplayNameFor(model => model.bookingInit)</dt>
        <dd>@Html.DisplayFor(model => model.bookingInit)</dd>
        <dt>@Html.DisplayNameFor(model => model.bookingEnd)</dt>
        <dd>@Html.DisplayFor(model => model.bookingEnd)</dd>
        <dt>@Html.DisplayNameFor(model => model.state)</dt>
        <dd>@Html.DisplayFor(model => model.state)</dd>
    </dl>

    <hr />
    <h4>Vehicle</h4>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.vehicle.Brand)</dt>
        <dd>@Html.DisplayFor(model => model.vehicle.Brand)</dd>
        <dt>@Html.DisplayNameFor(model => model.vehicle.Model)</dt>
        <dd>@Html.DisplayFor(model => model.vehicle.Model)</dd>
        <dt>@Html.DisplayNameFor(model => model.vehicle.licensePlate)</dt>
        <dd>@Html.DisplayFor(model => model.vehicle.licensePlate)</dd>
        <dt>@Html.DisplayNameFor(model => model.vehicle.Price)</dt>
        <dd>@Html.DisplayFor(model => model.vehicle.Price) €</dd>
        <dt>@Html.DisplayNameFor(model => model.vehicle.Company.Name)</dt>
        <dd>@Html.DisplayFor(model => model.vehicle.Company.Name)</dd>
    </dl>
</div>
<p>
    @{
        if (Model.state == TP_PWEB.Models.States.PENDING)
        {
            @Html.ActionLink("Back to List", "Index")
        }
        else if (Model.state == TP_PWEB.Models.States.APPROVED)
        {
            @Html.ActionLink("Back to List", "IndexCheckedIn")
        }
        else if (Model.state == TP_PWEB.Models.States.CHECKED_IN)
        {
            @Html.ActionLink("Back to List", "IndexCheckedOut")
        }
    }
</p>
