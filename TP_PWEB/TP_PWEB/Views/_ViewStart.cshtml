@{
    if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Business"))
        {
            Layout = "~/Views/Shared/_LayoutBusiness.cshtml";
        }
        else if(User.IsInRole("Clients"))
        {
            Layout = "~/Views/Shared/_LayoutClient.cshtml";
        }
        else if (User.IsInRole("Employees"))
        {
            Layout = "~/Views/Shared/_LayoutEmployees.cshtml";
        }
        else if (User.IsInRole("Admin"))
        {
            Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutAnonymous.cshtml";
    }
}
