@model IEnumerable<TP_PWEB.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<div class="container body-content">
    <h2>List of Employees</h2>

    <p>
        @Html.ActionLink("Create New Employee", "RegisterEmployee", "Account")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idUser.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idCompany.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.idCompany.Name)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.idEmployee }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.idEmployee })
                </td>
            </tr>
        }

    </table>

</div>

